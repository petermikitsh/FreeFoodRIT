<%= form_for(@event) do |f| %>

  <% if @event.errors.any? %>
    <div class="alert alert-error">
      <h4><%= pluralize(@event.errors.count, "error") %></h4><br />
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :start %>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %>
    <%= f.datetime_select :end %>
  </div>
  <div class="field">
    <%= f.label :location_id %>
    <%= collection_select(:event, :location_id, Location.all, :id, :name) %>
  </div>
  <br />

  <div class="button-group">
    <button class="btn btn-primary" type="submit">Submit</button>
    <button class="btn" type="button" onclick="window.location.href='<%=events_path%>'">Cancel</button>
  </div>

<% end %>
